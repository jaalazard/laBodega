{% extends 'base.html.twig' %}

{% block title %}Livraison
{% endblock %}
{% block body %}
	<h1 class="fw-bolder text-center mt-5">Entrez vos informations de livraison</h1>
	<form class="my-5">
		<div class="form-row d-flex flex-column align-items-center">
			<div class="form-group mb-2 col-md-6">
				<label class="fw-bold" for="lastname">Nom</label>
				<input type="text" class="form-control" id="lastname">
			</div>
			<div class="form-group mb-2 col-md-6">
				<label class="fw-bold" for="firstname">Prénom</label>
				<input type="text" class="form-control" id="firstname">
			</div>
		</div>
		<div class="form-row d-flex flex-column align-items-center">
			<div class="form-group mb-2 col-md-6">
				<label class="fw-bold" for="inputAddress">Addresse</label>
				<input type="text" class="form-control" id="inputAddress">
			</div>
			<div class="form-group mb-2 col-md-6">
				<label class="fw-bold" for="inputAddress2">Complément d'adresse</label>
				<input type="text" class="form-control" id="inputAddress2">
			</div>
		</div>
		<div class="form-row d-flex flex-column align-items-center">
			<div class="form-group mb-2 col-md-6">
				<label class="fw-bold" for="inputCity">Ville</label>
				<input type="text" class="form-control" id="inputCity">
			</div>
			<div class="form-group mb-2 col-md-6">
				<label class="fw-bold" for="inputZip">Code Postal</label>
				<input type="text" class="form-control" id="inputZip">
			</div>
		</div>
		<div class="form-row d-flex flex-column align-items-center">
			<a href="{{ path('cart_payment')}}" class="btn btn-lg btn-secondary border-2 border-primary mx-auto card-link text-primary fw-bold rounded text-decoration-none w-25">Valider</button>
		</div>
	</form>
{% endblock %}
