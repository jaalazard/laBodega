{% extends 'base.html.twig' %}

{% block title %}Mon catalogue
{% endblock %}
{% block body %}
	<div class="container-fluid">
		<h1 class="my-5 mx-auto text-center fw-bolder text-dark">Mon catalogue</h1>

		<table class="table table-striped">
			<thead>
				<tr>
					<th class="text-center">Nom</th>
					<th class="text-center">Prix</th>
					<th class="text-center">Description</th>
					<th class="text-center">Origine</th>
					<th class="text-center">Couleur</th>
					<th class="text-center">Force</th>
					<th class="text-center">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for pimento in pimentos %}
					<tr>
						<td class="text-center">{{ pimento.name }}</td>
						<td class="text-center">{{ pimento.price }}</td>
						<td>{{ pimento.description }}</td>
						<td class="text-center">{{ pimento.country.name }}</td>
						<td class="text-center">{{ pimento.color.name }}</td>
						<td class="text-center">{{ pimento.strength.name }}</td>
						<td class="text-center">
							<a href="{{ path('admin_pimento_edit', {'id': pimento.id}) }}">{{ include('icons/edit.svg') }}
							    {{ include('pimento/_delete_form.html.twig') }}

							</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">Votre catalogue est vide</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
