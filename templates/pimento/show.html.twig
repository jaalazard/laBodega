{% extends 'base.html.twig' %}

{% block title %}Pimento
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="text-center mt-5">{{ pimento.name }}</h1>
		<div class="row">
			<div class="card bg-secondary mx-auto px-0" style="width: 50rem;">
				<img class="card-img-top rounded" src="{{ asset('build/images/pimento.jpg') }}" alt="Card image cap">
				<div class="card-body">
					<h5 class="card-title text-center">{{ pimento.name }}</h5>
					<p class="card-text fst-italic h5 my-5">{{ pimento.description }}</p>
				</div>
				<ul>
					<li class="list-group-item bg-secondary h5 mb-3">Indice Scoville :
						{{ pimento.strength.name }}</li>
					<li class="list-group-item bg-secondary h5 mb-3">Famille : Piment
						{{ pimento.color.name }}</li>
					<li class="list-group-item bg-secondary h5 mb-3">Prix :
						{{ pimento.price }}â‚¬/kg</li>
					<li class="list-group-item bg-secondary h5">Origine :
						{{ pimento.country.name }}</li>

				</ul>
				<div class="d-flex justify-content-around my-5">
					<a class="btn btn-outline border-2 border-primary mx-auto card-link btn-sm  text-primary fw-bold rounded text-decoration-none w-25" href="{{ path('pimento_index') }}">Retour</a>
					<a href="{{ path('cart_add', {'id': pimento.id}) }}" class="btn btn-outline border-2 border-primary mx-auto card-link btn-sm text-primary fw-bold rounded text-decoration-none w-25">Acheter</a>
				</div>
			</div>
		</div>
	{% endblock %}
