{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<h1 class="h1 text-dark fw-bolder text-center my-5">Se connecter</h1>


	<div class="d-flex justify-content-around">
		<a href="{{ path('admin_pimento_new') }}">
			<img src="{{ asset('build/images/pimentvert.png') }}" style="height: 240px; width: 300px;"/>
		</a>
		<a href="{{ path('admin_pimento_new') }}">
			<img src="{{ asset('build/images/pimentjaune.png') }}" style="height: 240px; width: 300px; "/>
		</a>
		<a href="{{ path('admin_pimento_new') }}">
			<img src="{{ asset('build/images/pimentrouge.png') }}" style="height: 240px; width: 300px;"/>
		</a>
	</div>

	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	<form action="{{ path('login') }}" method="post">
		<div class="row mx-5 mb-5 mt-2">
			<div class="form-group mb-3">
				<label class="h6" for="username">Email :
				</label>
				<input class="form-control w-sm-75 border-2 border-secondary" type="text" id="username" name="_username" value="{{ last_username }}">
			</div>
			<div class="form-group">
				<label class="h6" for="password">Mot de passe :
				</label>
				<input class="form-control w-sm-75 border-2 border-secondary" type="password" id="password" name="_password">
			</div>
			<input type="hidden" name="_target_path" value="home">

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<div class="col d-flex align-items-center">
				<div class="d-flex justify-content-between">
					<button class="btn btn-outline-secondary fw-bold my-3 text-decoration-none text-uppercase" type="submit">login</button>
					<a href="{{ path('app_forgot_password_request') }}" class="btn btn-outline-secondary fw-bold my-3 text-decoration-none text-uppercase">Mot de passe oubli√© ?</a>
				</div>
			</div>
		</div>
	</form>
{% endblock %}
