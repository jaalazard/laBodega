{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<section class="container">
		<h1 class="h1 text-dark fw-bolder text-center mt-5 mb-1">S'inscrire</h1>

		{{ form_errors(registrationForm) }}

		{{ form_start(registrationForm) }}
		<div class="my-4">
			<label class="form-label">email</label>
			<div class="input-group w-75 w-md-50"></div>
			{{ form_widget(registrationForm.email) }}
		</div>
		<div class="my-4">
			<label class="form-label">Mot de passe</label>
			<div class="input-group w-75 w-md-50"></div>
			{{ form_widget(registrationForm.plainPassword) }}
		</div>
		<div class="d-flex justify-content-end">
			<button class="btn btn-dark text-uppercase p-2 mt-3 px-4 btn col-btn-sm rounded-5 d-grid" type="submit">Valider</button>
		</div>
		{{ form_end(registrationForm) }}
	</section>
{% endblock %}
